{% extends 'base.html.twig' %}
{% block title %}Hello Products!
{% endblock %}
{% block body %}
	<h1>Liste des produits</h1>
	<br>
	<div class="container">
		<table class="table">
			<thead>
				<tr>
					<th>Id produit</th>
					<th>Produit</th>
					<th>Catégorie</th>
					<th>Stock</th>
					<th>Prix</th>
					<th>Action</th>
				</tr>
			</thead>
			{% for product in products %}
			<tr>
				<td>
					{{product.Id}}
				</td>
				<td>
					{{product.name}}
				</td>
                <td>
					{{product.category.name}}
				</td>
                <td>
					{{product.quantity}}
				</td>
                <td>
					{{product.Price}}€
				</td>

				<td>
					<a class="btn btn-warning" href="{{ path('prod-edit',{'id':product.id}) }}">modifier</a>
					<a class="btn btn-danger" href="{{ path('prod-delete',{'id':product.id}) }}" onclick="return confirm('Are you sure you want to delete this item?');">supprimer</a>
				</td>
			</tr>
	</div>
{% endfor %}
		</table>
<a class="btn btn-primary" href="{{ path('prod-new') }}">Création d'un nouveau produit</a>
        {% endblock %}