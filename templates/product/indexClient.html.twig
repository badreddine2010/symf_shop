{% extends 'base.html.twig' %}
{% block title %}Hello Products!
{% endblock %}
{% block body %}
	<div class="container">
	<h1>Liste des produits</h1>
		<table class="table">
			<thead>
				<tr>
					<th>Id produit</th>
					<th>Produit</th>
					<th>Catégorie</th>
					<th>Stock</th>
					<th>Prix</th>
					<th>Action</th>
				</tr>
			</thead>
			{% for product in products %}
			<tr>
				<td>
					{{product.Id}}
				</td>
				<td>
					{{product.name}}
				</td>
                <td>
					{{product.category.name}}
				</td>
                <td>
					{{product.quantity}}
				</td>
                <td>
					{{product.Price}}€
				</td>

				<td>
					<a class="btn btn-success" href="{{ path('prod-edit',{'id':product.id}) }}">Ajouter panier</a>
				</td>
			</tr>
	</div>
		<br>
{% endfor %}
		</table>

{% endblock %}