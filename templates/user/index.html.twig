{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1>Profile User</h1>
	<div class="container">
		<table class="table">
			<thead>
				<tr>
					{% if is_granted('ROLE_ADMIN') %}

						<th class="text-center">Id</th>
					{% endif %}
					<th class="text-center">Email</th>
					{% if is_granted('ROLE_ADMIN') %}

						<th class="text-center">Rôle</th>
					{% endif %}
					{# <th>Password</th> #}
					<th class="text-center">Prénom</th>
					<th class="text-center">Nom</th>
					<th class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						{% if is_granted('ROLE_ADMIN') %}

							<td class="text-center">{{ user.id }}</td>
						{% endif %}
						<td class="text-center">{{ user.email }}</td>
						{% if is_granted('ROLE_ADMIN') %}

							<td class="text-center">{{ user.roles ? user.roles|json_encode : '' }}</td>
						{% endif %}
						{# <td>{{ user.password }}</td> #}
						<td class="text-center">{{ user.firstName }}</td>
						<td class="text-center">{{ user.name }}</td>
						<td class="text-center">
							<a class="btn btn-warning" href="{{ path('app_user_show', {'id': user.id}) }}">Voir</a>
							<a class="btn btn-success" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7" class="text-center">Aucun enregistrement trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		{% if is_granted('ROLE_ADMIN') %}

			<a class="btn btn-primary" href="{{ path('app_register') }}">Créer un nouveau user</a>
		{% endif %}
	</div>
{% endblock %}
