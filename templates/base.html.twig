<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8"/>
		<title>
			{% block title %}
				Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="{{ asset('build/images/livre1.jpg') }}"/>
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.1.3/dist/flatly/bootstrap.min.css"/>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		<!-- JavaScript Bundle with Popper -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		{# <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script> #}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<div class="container-fluid">
				<a class="navbar-brand" href="#">Mini Shop</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link active" href="{{ path('home') }}">
								Accueil
								<span class="visually-hidden">(current)</span>
							</a>
						</li>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('app_cart') }}">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart4" viewbox="0 0 16 16">
								<path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z"/>
							</svg>
							<sup class="badge badge-pill bg-danger">{{ getTotalQty() }}</sup>
						</a>

					</li>
					{# <li class="nav-item"><a class="nav-link" href="{{ path('cat-contact') }}">A propos</a></li> #}
					{% if is_granted('ROLE_ADMIN') %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_user_index') }}">Users</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_product_index') }}">Produits</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_category') }}">Catégories</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('all_order') }}">Commandes</a>
						</li>
					</li>
				{% elseif is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') %}

					<li class="nav-item">
						<a class="nav-link" href="{{ path('order_all') }}">Commandes</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('productsClient') }}">Produits</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('app_user_indexProfile') }}">Profile</a>
					</li>
				{% endif %}
				{% if app.user %}
					<li class="nav-item">
						<a class="nav-link" href="{{ path('app_logout') }}">Déconnexion ({{app.user.firstName}}
							{{app.user.name}}
							)</a>
					</li>
				{% else %}
					<li class="nav-item">
						<a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('app_register') }}">Créer mon compte</a>
					</li>
				{% endif %}

			</ul>
		</div>
	</body>
</html></div></nav>{% block body %}{% endblock %}</body></html>
