{% extends 'base.html.twig' %}

{% block title %}Enregistrer{% endblock %}

{% block body %}
    <h1>Création de mon compte</h1>
<div class="container">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email,{label:'adresse mail'}) }}
        {{ form_row(registrationForm.roles,{label:'role'}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.firstName,{label:'votre prénom'}) }}
        {{ form_row(registrationForm.name,{label:'votre nom'}) }}
        {{ form_row(registrationForm.agreeTerms,{label:"Accepter les conditions d'utilisation"}) }}

        <button type="submit" class="btn btn-primary">S'enregistrer</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
