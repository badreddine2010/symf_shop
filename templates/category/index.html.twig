{% extends 'base.html.twig' %}
{% block title %}Hello Categories!
{% endblock %}
{% block body %}
	<h1>Liste des catégories</h1>
	<br>
	<div class="container">
		<table class="table">
			<thead>
				<tr>
					<th class="text-center">Id catégorie</th>
					<th class="text-center">Catégorie</th>
					<th class="text-center">Action</th>
				</tr>
			</thead>
			{% for category in categories %}
			<tr>
				<td class="text-center">
					{{category.Id}}
				</td>
				<td class="text-center">
					{{category.name}}
				</td>

				<td class="text-center">
					<a class="btn btn-warning" href="{{ path('cat-edit',{'id':category.id}) }}">modifier</a>
					<a class="btn btn-danger" href="{{ path('cat-delete',{'id':category.id}) }}" onclick="return confirm('Are you sure you want to delete this item?');">supprimer</a>
				</td>
			</tr>
	</div>
{% endfor %}
		</table>
<a class="btn btn-primary" href="{{ path('cat-new') }}">Création d'une nouvelle catégorie</a>{% endblock %}
